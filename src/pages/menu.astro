    margin-left: 50%

}


/* You can adjust these styles based on your needs */
.menu {
    position: relative;
    z-index: 1;
}

/* Other existing styles... */
   body {
            background-color: #F5F5F5;
            font-family: "owners-text", sans-serif;
            font-weight: 600;
            font-style: normal;
            background-color: #FFF7FE;
        }

        .video {
            margin-left: 90px;
            margin-right: 90px;
            margin-top: 20px;
        }

        /* CSS Reset */
        body, h1, p, ul, li {
            margin: 0;
            padding: 0;
        }

        @media (max-width: 800px) {
            #videoweb {
                display: none;
                z-index: 1;
            }
        }

        @media (min-width: 800px) {
            #videmobil {
                display: none;
            }
        }

        #book {
            display: flex;
            position: absolute;
            right: 30px;
            /* Adjust the position as needed */
            transition: transform 0.3s;
            /* Add smooth transition effect for transform property */
            bottom: 50px;
            font-size: 20px;
        }

        #book a {
            color: #203ED8;
            text-decoration: none;
            /* Remove underline from the link */
            padding: 10px;
            transition: font-size 0.3s;
            /* Add smooth transition effect for font-size property */
        }

        #book:hover a {
            font-size: 30px;
            /* Change font size on hover */
        }

        .menu {
            text-align: center;
            /* Center text horizontally */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 40px;
            margin-left: 400px;
            margin-right: 400px;
            color: #EC5944;
            font-weight: 800;
            font-size: 30px;
            margin-top: 100px;
        }

        .texti_matsedill {
            color: #EC5944;
            font-weight: 300;
            font-size: 20px;
        }

        .matsedill {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
             margin-top: 70px;
             margin-bottom: 100px;
        }

        .menu-section {
            text-align: center;
            color: #EC5944;
            font-weight: 300;
            font-size: 24px;
            position: relative;
            text-align: left;
            margin-left: 90px;
            margin-right: 30px;
            gap: 10px;
        }

        .menu-section:not(:last-child) {
            border-right: 1px solid #EC5944;
            /* Thin line between sections */
        }

        .menu-item {
            margin-top: 10px;
            font-size: 18px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .menu-item span {
            margin-top: 5px;
        }

        .tekst_i_menu {
            font-weight: 100;
        }

        #headline {
 font-weight: 600;
 margin: 30px;
 margin-left: 100px;

        }

@media (max-width: 800px) {
    #videoweb {
        display: none;
        z-index: 1;
    }

    #videmobil {
        display: none;
    }

    .menu {
        margin-left: 20px;
        margin-right: 20px;
    }

    #book {
        right: 10px;
        bottom: 10px;
        font-size: 16px;
    }

    .matsedill {
        grid-template-columns: 1fr; /* Set one fraction for each row */
        margin-top: 20px; /* Adjust spacing as needed */
        margin-bottom: 20px;
        display: flex;
        flex-direction: column; /* Change to a column layout */
        align-items: center; /* Center items horizontally */
    }

    .menu-section {
        margin-left: 20px;
        margin-right: 20px;
        border-right: 1px solid #EC5944; /* Add a thin red line horizontally */
        text-align: center; /* Center the text horizontally */
    }

    .menu-section: {
        border-right: none; /* Remove the thin line from the last section */
    }
}
