---
import Mainlayout from "../layouts/Mainlayout.astro";
---
<Mainlayout title="Italo Disco">
  <main>
    <div class="video">
      <video width="100%" height="100%" id="videoweb" autoplay muted loop>
        <source src="forside.webm" type="video/mp4">
      </video>
      <video width="100%" height="100%" id="videmobil" autoplay muted loop>
        <source src="forsidemobil.mp4" type="video/webm">
      </video>
    </div>
    <br>
    <div id="book">
      <a href="/">CLICK TO BOOK A TABLE</a>
    </div>
  </main>
</Mainlayout>

<style>
  .video {
    margin-left: 90px;
    margin-right: 90px;
    margin-top: 20px;
    background-color: transparent;
  }

  video {
    max-width: 100%;
    height: auto;
  }

  /* CSS Reset */
  body, h1, p, ul, li {
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "owners-text", sans-serif;
    font-weight: 600;
    font-style: normal;
    background-color: #FFF7FE;
  }

  @media (max-width: 800px) {
    #videoweb {
      display: none;
      z-index: 1;
    }

    #videmobil {
      display: block;
       margin-top: 100px;
    }

    #book {
      display: flex;
      justify-content: center;
      font-size: 20px;
      margin-top: 10px;
    }

    #book a {
      color: #203ED8;
      text-decoration: none;
      padding: 10px;
      transition: font-size 0.3s;
    }
  }

  @media (min-width: 800px) {
    #videmobil {
      display: none;
    }

    #book {
      display: flex;
      position: absolute;
      right: 30px;
      bottom: 50px;
      font-size: 20px;
      transition: transform 0.3s;
    }

    #book a {
      color: #203ED8;
      text-decoration: none;
      padding: 10px;
      transition: font-size 0.3s;
    }

    #book:hover a {
      font-size: 30px;
    }
  }
</style>
